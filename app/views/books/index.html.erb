<h2>Books</h2>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="2"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "Show", book %></td>
				<td><%= link_to "Edit", edit_book_path(book) %></td>
				<td><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "are you sure?"} %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<h4>New book</h4>
	<% if @book.errors.any? %>
    	<div id="error_explanation">
      	<h4><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h4>
      	<ul>
      	<% @book.errors.full_messages.each do |message| %>
        	<li><%= message %></li>
      	<% end %>
      	</ul>
    	</div>
    <% end %>
	<%= form_for(@book) do |f| %>

		<p>title</p>
		<%= f.text_field :title %>
		<p>body</p>
		<%= f.text_area :body %><br>

		<%= f.submit 'Create Book' %>
	<% end %>


