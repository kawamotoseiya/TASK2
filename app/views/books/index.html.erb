<h2>Books</h2>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="2"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "Show", book %></td>
				<td><%= link_to "Edit", edit_book_path(book) %></td>
				<td><%= link_to "Destroy", book_path(book), method: :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<h4>New book</h4>
	<%= form_for(@book) do |f| %>

		<p>title</p>
		<%= f.text_field :title %>
		<p>body</p>
		<%= f.text_area :body %><br>

		<%= f.submit 'create book' %>
	<% end %>

